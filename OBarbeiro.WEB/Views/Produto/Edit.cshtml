@model OBarbeiro.Modelo.Modelos.Produto

@{
    ViewData["Title"] = "Edição";
}

<h4 class="text-success">Alterar cadastro de serviço</h4>
<hr class="bg-white" />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <input asp-for="ProdutoId" type="hidden" class="form-control" />
            <partial name="_Formulario" />
        </form>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $('.idCadastro').attr('readonly', true)
        });
    </script>
}
