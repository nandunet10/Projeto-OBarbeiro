@model OBarbeiro.Modelo.Modelos.Profissional

<div class="card">
    <div class="card-header">Dados do profissional</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control maskCPF idCadastroEdicao" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>


        </div>
    </div>

    <div class="card-header">Contato</div>
    <div class="card-body">

        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control maskCelular" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-9">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="card-header">Empresa</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <label asp-for="EmpresaEmail" class="control-label">Informe seu e-mail</label>
                    <input asp-for="EmpresaEmail" class="form-control idCadastro" />
                    <span asp-validation-for="EmpresaEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-2 mt-4">
                <div class="form-group form-check">
                    <label class="control-label">
                        <input asp-for="Ativo" class="form-check-input" /> @Html.DisplayNameFor(model => model.Ativo)
                    </label>
                </div>
            </div>
        </div>

    </div>

    <div class="card-footer">
        <div class="row actions justify-content-start">
            <div class="col-md-1">
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-outline-info">Voltar</a>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-outline-success" />
                </div>
            </div>
        </div>
    </div>
</div>
